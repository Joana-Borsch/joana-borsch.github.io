---
layout: default
---
{% include menu.liquid %}
<header class="site-masthead">
  {% if site.title %}
    <h1>{{ site.title }}</h1>
  {% endif %}
  {% if site.title %}
    <h2>{{ site.description }}</h2>
  {% endif %}
</header>

<main class="home" id="main" aria-label="Content">
  <h1 class="content-title divided">{% if site.paginate and site.paginate_path and paginator.page >= 1 %}Acte {{ paginator.page | to_roman }}{% else %}Ressenyes{% endif %}</h1>

  {% if site.paginate and site.paginate_path %}
    <ul class="post-list">
      {% for post in paginator.posts %}
        {% include post-list-item.liquid %}
      {% endfor %}
    </ul>

    {% if paginator.total_pages > 1 %}
      <div class="post-pagination">
        {% if paginator.previous_page %}
          <a href="{{ paginator.previous_page_path | prepend: site.baseurl }}" class="pagination-previous btn"> &lang;&lang; Anterior</a>
        {% else %}
          <span>&nbsp;</span>
        {% endif %}
        <span class="pagination-number">{{ paginator.page }} de {{ paginator.total_pages }}</span>
        {% if paginator.next_page %}
          <a href="{{ paginator.next_page_path | prepend: site.baseurl }}" class="pagination-next btn">Seg√ºent &rang;&rang;</a>
        {% else %}
          <span>&nbsp;</span>
        {% endif %}
      </div>
    {% endif %}
  {% else %}
    <ul class="post-list">
      {% for post in site.posts %}
        {% include post-list-item.liquid %}
      {% endfor %}
    </ul>
  {% endif %}
</main>
