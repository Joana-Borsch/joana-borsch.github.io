---
layout: page
pagination:
  enabled: true
  per_page: 3
---
<ul class="post-list">
  {% assign post_count = paginator.posts | size %}
  {% if post_count > 0 %}
    {% for post in paginator.posts %}
      {% include post-list-item.liquid %}
    {% endfor %}
  {% else %}
    <li>No hi ha cap entrada en {{ page.pagination.category }}.</li>
  {% endif %}
</ul>

{% if paginator.total_pages > 1 %}
  <div class="post-pagination">
    {% if paginator.previous_page %}
      <a href="{{ paginator.previous_page_path | prepend: site.baseurl }}" class="pagination-previous btn"> &lang;&lang; Anterior</a>
    {% else %}
      <span>&nbsp;</span>
    {% endif %}
    <span class="pagination-number">{{ paginator.page }} de {{ paginator.total_pages }}</span>
    {% if paginator.next_page %}
      <a href="{{ paginator.next_page_path | prepend: site.baseurl }}" class="pagination-next btn">Seg√ºent &rang;&rang;</a>
    {% else %}
      <span>&nbsp;</span>
    {% endif %}
  </div>
{% endif %}
