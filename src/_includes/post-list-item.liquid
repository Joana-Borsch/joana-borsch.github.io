<li>
  <a href="{{ post.url | absolute_url }}" class="post-link">
    <div class="post-link__heading">
      {% unless post.title == '' %}
        <h1 class="post-link__title">{{ post.title }}</h1>
      {% else %}
        {% include post-excerpt.liquid %}
      {% endunless %}
      {% if post.title != '' and site.show_excerpts == true %}
        {% include post-excerpt.liquid %}
      {% endif %}
    </div>
    <span class="post-date"> {{ post.date | date: "%b %-d, '%y" | localize: '%-d %b %Y' }} </span>
  </a>
</li>
